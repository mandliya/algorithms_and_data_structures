#include <iostream>

using namespace std;
// arr - input array
// n - size of array
#include <iostream>
#include<bits/stdc++.h>

using namespace std;
int minAbsoluteDiff(int arr[], int n) {
 
    sort(arr,arr+n);
    int d=abs(arr[0]-arr[1]);
     for(int i=1;i<n-1;i++)
         
     {
         if(abs(arr[i]-arr[i+1])<d)
         d=abs(arr[i]-arr[i+1]);
     }
    return d;
}


int main() {

	int size;
	cin >> size;
	int *input = new int[1 + size];
	
	for(int i = 0; i < size; i++)
		cin >> input[i];
	
	cout<< minAbsoluteDiff(input,size) << endl;
	
	return 0;

}
