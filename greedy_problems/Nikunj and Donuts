#include<bits/stdc++.h>
using namespace std;
int main()
{
    
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++)
    cin>>arr[i];
    sort(arr,arr+n,greater<int>());
    long s=0;
    long t=0;
    for(int i=0;i<n;i++)
    {
        
        s=s+(pow(2,i)*arr[i]);
    }
    cout<<s<<endl;
    
    
    return 0;
}
